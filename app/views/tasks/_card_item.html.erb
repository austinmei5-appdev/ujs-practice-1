<li id="<%= dom_id(task) %>" class="list-group-item">
  <%= task.text %>
  <div class="row text-center mt-1 mb-1">
    <div class="col">
      <%= link_to root_url, class: "btn btn-link" do %>
        <i class="fa-solid fa-play"></i>

      <% end %>
    </div>

    <div class="col">
      <%= link_to edit_task_path(task), class: "btn btn-link", remote: true do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </div>
    
    <div class="col">
      <%= link_to task, class: "btn btn-link", method: :delete, remote: true do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </div>
</li>
