<div class="row">
  <div class="col">
    <%= render "card_task", title: "Not yet started", list: current_user.own_tasks.not_yet_started %>
  </div>
  <div class="col">
    <%= render "card_task", title: "In progress", list: current_user.own_tasks.in_progress %>
  </div>
  <div class="col">
    <%= render "card_task", title: "Completed", list: current_user.own_tasks.completed %>
  </div>
</div>


